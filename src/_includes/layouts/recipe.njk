---
layout: layouts/base.njk
---
<article class="max-w-4xl mx-auto px-4 py-8">
    <header class="mb-8">
        {% if thumbnail %}
        <div class="relative w-full h-96 rounded-lg overflow-hidden shadow-md mb-6">
            <img src="{{ thumbnail }}" alt="{{ title }}" class="absolute inset-0 w-full h-full object-cover">
            <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/40 to-transparent"></div>
            <div class="absolute bottom-0 left-0 right-0 p-8">
                <h1 class="text-4xl md:text-5xl font-bold text-white">{{ title }}</h1>
            </div>
        </div>
        {% else %}
        <div class="text-center mb-6">
            <h1 class="text-4xl font-bold text-gray-800">{{ title }}</h1>
        </div>
        {% endif %}
        <div class="flex flex-wrap justify-center items-center gap-6 text-lg text-gray-700">
            {% if cooking_time %}
            <div>
                <span class="font-semibold">Time:</span> {{ cooking_time }}
            </div>
            {% endif %}
            {% if servings %}
            <div>
                <span class="font-semibold">Servings:</span> {{ servings }}
            </div>
            {% endif %}
            {% if tags %}
            <div class="flex flex-wrap gap-2">
                {% for tag in tags %}
                <span class="inline-block px-3 py-1 bg-pink-100 text-pink-600 rounded-full text-sm font-medium">
                    {{ tag }}
                </span>
                {% endfor %}
            </div>
            {% endif %}
        </div>
    </header>

    <div class="grid md:grid-cols-3 gap-8">
        <div class="md:col-span-1">
            <h2 class="text-2xl font-semibold mb-4 text-gray-800 border-b-2 border-pink-500 pb-2">Ingredients</h2>
            <ul class="list-disc list-inside space-y-2 text-gray-700">
                {% for item in ingredients %}
                <li>{{ item }}</li>
                {% endfor %}
            </ul>
        </div>

        <div class="md:col-span-2">
            <h2 class="text-2xl font-semibold mb-4 text-gray-800 border-b-2 border-pink-500 pb-2">Instructions</h2>
            <div class="space-y-4 text-gray-700">
                {% for step in instructions %}
                <div class="flex">
                    <span class="font-bold text-pink-500 mr-4">{{ loop.index }}.</span>
                    <p>{{ step }}</p>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
    
    {% if description %}
    <div class="mt-8 p-6 bg-gray-50 rounded-lg">
        <h3 class="text-xl font-semibold mb-2">Notes</h3>
        <p class="text-gray-700">{{ description }}</p>
    </div>
    {% endif %}
</article>
